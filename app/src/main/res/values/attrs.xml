<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="TitleView">
        <attr name="mtitle" format="string" />
        <attr name="titleRight" format="string" />
    </declare-styleable>
    <attr name="tvText" format="string" />
    <declare-styleable name="LayoutTvTv">
        <attr name="tvText" />
    </declare-styleable>

    <declare-styleable name="LayoutTvEdit">
        <attr name="tvText" />
    </declare-styleable>

    <declare-styleable name="BackTitleBar">
        <attr name="titleText" format="string" />
        <attr name="actionText" format="string" />
        <attr name="actionTextColor" format="color" />
        <attr name="titleTextColor" format="color" />
        <attr name="actionBg" format="reference" />
        <attr name="showBack" format="boolean" />
        <attr name="backIcon" format="reference" />
        <attr name="actionIcon" format="reference" />
        <attr name="background" format="reference" />
    </declare-styleable>

    <!-- 圆形进度条 -->
    <declare-styleable name="CircleProgressBar">
        <attr name="antiAlias" />
        <attr name="startAngle" />
        <attr name="sweepAngle" />
        <attr name="animTime" />
        <attr name="maxValue" />
        <attr name="value" />
        <attr name="precision" />
        <attr name="valueSize" />
        <attr name="valueColor" />
        <attr name="textOffsetPercentInRadius" />
        <!-- 绘制内容相应的提示语 -->
        <attr name="hint" />
        <attr name="hintSize" />
        <attr name="hintColor" />
        <!-- 绘制内容的单位 -->
        <attr name="unit" />
        <attr name="unitSize" />
        <attr name="unitColor" />
        <!-- 圆弧宽度 -->
        <attr name="arcWidth" />
        <attr name="arcColors" />
        <!-- 背景圆弧颜色 -->
        <attr name="bgArcColor" />
        <!-- 背景圆弧宽度 -->
        <attr name="bgArcWidth" format="dimension" />
    </declare-styleable>

    <!-- 带游标的水平进度条 -->
    <declare-styleable name="self_pro">
        <attr name="pro_color" />
        <attr name="rect_color" />
        <attr name="rect_width" />
        <attr name="pro_width" />
        <attr name="pro_height" />
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="line_color" format="color"></attr>
        <attr name="cursor_color" format="color"></attr>
        <attr name="text_color" format="color"></attr>
        <attr name="max_progress" format="integer"></attr>
        <attr name="min_progress" format="integer"></attr>
        <attr name="oneitem_value" format="integer"></attr>
        <attr name="one_group_value" format="integer"></attr>
        <attr name="current_progress" format="float"></attr>
        <attr name="linewidth" format="float"></attr>
        <attr name="scrollable" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>


    <!--图表自定义属性-->
    <declare-styleable name="HorizontalselectedView">
        <!--可见数目-->
        <attr name="HorizontalselectedViewSeesize" format="integer"></attr>
        <!--被选择文字的大小和颜色-->
        <attr name="HorizontalselectedViewSelectedTextSize" format="float"></attr>
        <attr name="HorizontalselectedViewSelectedTextColor" format="color|reference"></attr>
        <!--未被被选择文字的大小和颜色-->
        <attr name="HorizontalselectedViewTextSize" format="float"></attr>
        <attr name="HorizontalselectedViewTextColor" format="color|reference"></attr>
        <!--度量单位-->
        <attr name="TextUnit" format="string"></attr>
        <!--背景-->
        <attr name="LineBackground" format="color|reference"></attr>
        <!--数值竖线颜色-->
        <attr name="VerticalLineColor" format="color|reference"></attr>
        <!--刻度颜色-->
        <attr name="ScaleLineColor" format="color|reference"></attr>
        <!--折线颜色-->
        <attr name="LineColor" format="color|reference"></attr>

        <attr name="String2PaddingLeft" format="integer"></attr>
        <!--Tip背景-->
        <attr name="TipMap" format="color|reference"></attr>
        <!--阴影区域渐变颜色-->
        <attr name="PathStartColor" format="color|reference"></attr>
        <attr name="PathEndColor" format="color|reference"></attr>
        <!--选中竖线渐变颜色-->
        <attr name="LineStartColor" format="color|reference"></attr>
        <attr name="LineEndColor" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="OnekeyEditTextView">
        <attr name="hint" format="string"/>
        <attr name="editBackground" format="reference" />
        <attr name="drawableLine" format="reference" />
        <attr name="showPasswordMark" format="boolean" />
        <attr name="drawableShowPasswordMark" format="reference" />
        <attr name="drawableHidePasswordMark" format="reference" />
        <attr name="maxLength" format="integer" />
        <attr name="drawableLeft" format="reference" />
        <attr name="inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textAutoCorrect" value="0x00008001" />
            <flag name="textAutoComplete" value="0x00010001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textImeMultiLine" value="0x00040001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textUri" value="0x00000011" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textEmailSubject" value="0x00000031" />
            <flag name="textShortMessage" value="0x00000041" />
            <flag name="textLongMessage" value="0x00000051" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="textWebEditText" value="0x000000a1" />
            <flag name="textFilter" value="0x000000b1" />
            <flag name="textPhonetic" value="0x000000c1" />
            <flag name="textWebEmailAddress" value="0x000000d1" />
            <flag name="textWebPassword" value="0x000000e1" />
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandIndicator" format="reference" />
        <attr name="collapseIndicator" format="reference" />
        <attr name="expandToggleType" format="enum">
            <enum name="ImageButton" value="0" />
            <enum name="TextView" value="1" />
        </attr>
        <attr name="expandableTextId" format="reference" />
        <attr name="expandCollapseToggleId" format="reference" />
        <attr name="expandToggleOnTextClick" format="boolean" />
    </declare-styleable>


    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />
    <attr name="dayNightBackgroundDrawable" format="color|reference" />

    <declare-styleable name="DayNightMode">
        <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
    </declare-styleable>

</resources>
